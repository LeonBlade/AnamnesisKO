<Window
	x:Class="Anamnesis.GUI.MainWindow"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:ana="clr-namespace:Anamnesis.Styles.Controls"
	xmlns:characterPages="clr-namespace:Anamnesis.Character.Pages"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
	xmlns:markdig="clr-namespace:Markdig.Wpf;assembly=Markdig.Wpf"
	xmlns:materialdesign="http://materialdesigninxaml.net/winfx/xaml/themes"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:posePages="clr-namespace:Anamnesis.PoseModule.Pages"
	xmlns:services="clr-namespace:Anamnesis"
	xmlns:views="clr-namespace:Anamnesis.Views"
	Activated="Window_Activated"
	AllowsTransparency="True"
	Background="Transparent"
	Closing="Window_Closing"
	Deactivated="Window_Deactivated"
	Icon="/Assets/Concept Matrix.ico"
	Loaded="Window_Loaded"
	MouseEnter="Window_MouseEnter"
	MouseLeave="Window_MouseLeave"
	ResizeMode="CanMinimize"
	SizeToContent="WidthAndHeight"
	TextBlock.Foreground="{DynamicResource MaterialDesignBody}"
	Topmost="{Binding SettingsService.Settings.AlwaysOnTop}"
	WindowStyle="None"
	TextBlock.FontSize="12"
	Style="{StaticResource AnaWindowStyle}"
	mc:Ignorable="d">

	<FrameworkElement.CommandBindings>
		<CommandBinding Command="{x:Static markdig:Commands.Hyperlink}" Executed="OpenHyperlink" />
	</FrameworkElement.CommandBindings>

	<Window.Title>
		<MultiBinding StringFormat="{}Anamnesis - {0}">
			<Binding Path="TargetService.SelectedActor.DisplayName" />
		</MultiBinding>
	</Window.Title>

	<Grid x:Name="ContentArea" Margin="10">

		<Border
			x:Name="InActiveBorder"
			Background="{DynamicResource MaterialDesignPaper}"
			BorderBrush="#50000000"
			BorderThickness="1"
			CornerRadius="3">
			<Border.Effect>
				<DropShadowEffect
					BlurRadius="10"
					Opacity="0.75"
					ShadowDepth="0" />
			</Border.Effect>
		</Border>

		<Grid
			Width="958"
			Height="552"
			Margin="1"
			ClipToBounds="True">

			<Grid.LayoutTransform>
				<ScaleTransform x:Name="WindowScale" ScaleX="0.5" ScaleY="0.5" />
			</Grid.LayoutTransform>

			<Grid Background="{DynamicResource MaterialDesignShadowBrush}" IsEnabled="{Binding GposeService.IsNotChangingState}">
				<TabControl x:Name="Tabs" TabStripPlacement="Left">

					<TabControl.Template>
						<ControlTemplate TargetType="TabControl">

							<Grid>
								<Grid.ColumnDefinitions>
									<ColumnDefinition Width="Auto" />
									<ColumnDefinition />
								</Grid.ColumnDefinitions>

								<Grid Grid.RowSpan="2" Grid.Column="0">

									<Grid Width="47">

										<Grid.RowDefinitions>
											<RowDefinition Height="Auto" />
											<RowDefinition Height="Auto" />
											<RowDefinition />
											<RowDefinition Height="Auto" />
										</Grid.RowDefinitions>

										<Button
											Grid.Row="0"
											Height="22"
											Margin="2,2,2,12"
											Click="OnAddActorClicked"
											Style="{DynamicResource MaterialDesignOutlinedButton}">
											<fa:IconBlock FontSize="12" Icon="Plus" />
										</Button>

										<ScrollViewer
											Grid.Row="1"
											MaxHeight="300"
											HorizontalScrollBarVisibility="Disabled"
											VerticalScrollBarVisibility="Hidden">
											<ItemsControl Margin="0,2,0,2" ItemsSource="{Binding TargetService.PinnedActors}">
												<ItemsControl.ItemTemplate>
													<DataTemplate>
														<Grid Margin="0,3">
															<ToggleButton
																Width="32"
																Height="32"
																IsChecked="{Binding IsSelected}"
																PreviewMouseUp="OnActorPinPreviewMouseUp"
																Style="{DynamicResource RoundToggleButton}">

																<ToggleButton.ContextMenu>
																	<ContextMenu>
																		<MenuItem Click="OnUnpinActorClicked" Header="Unpin" />
																		<MenuItem Click="OnConvertActorClicked" Header="Convert to player" />
																	</ContextMenu>
																</ToggleButton.ContextMenu>

																<TextBlock
																	Margin="0,0,0,2"
																	HorizontalAlignment="Center"
																	VerticalAlignment="Center"
																	FontSize="14"
																	FontWeight="SemiBold"
																	Text="{Binding Initials}" />

																<ToggleButton.ToolTip>
																	<StackPanel>
																		<TextBlock>
																			<TextBlock.Text>
																				<MultiBinding StringFormat="{}{0} ({1})">
																					<Binding Path="DisplayName" />
																					<Binding Path="Kind" />
																				</MultiBinding>
																			</TextBlock.Text>
																		</TextBlock>

																		<TextBlock Text="This actor could not be found" Visibility="{Binding IsValid, Converter={StaticResource !B2V}}" />

																	</StackPanel>
																</ToggleButton.ToolTip>

															</ToggleButton>

															<Ellipse
																Width="32"
																Height="32"
																Stroke="Red"
																StrokeThickness="1"
																Visibility="{Binding IsValid, Converter={StaticResource !B2V}}" />

															<Grid
																Width="15"
																Height="15"
																Margin="0,-4,4,0"
																HorizontalAlignment="Right"
																VerticalAlignment="Top"
																Visibility="{Binding IsValid, Converter={StaticResource B2V}}">
																<Ellipse Fill="{DynamicResource PrimaryHueMidBrush}" />
																<fa:IconImage
																	Margin="2,1,1,2"
																	Foreground="Black"
																	Icon="{Binding Icon}" />
															</Grid>
														</Grid>

													</DataTemplate>
												</ItemsControl.ItemTemplate>
											</ItemsControl>
										</ScrollViewer>

										<StackPanel
											Grid.Row="2"
											Margin="3,12,0,0"
											HorizontalAlignment="Left"
											IsItemsHost="true"
											Orientation="Vertical" />

										<StackPanel Grid.Row="3">
											<Button
												Height="32"
												Margin="2"
												BorderThickness="0"
												Click="OnAboutClick"
												Style="{StaticResource TransparentButton}"
												ToolTip="About">
												<fa:IconBlock
													FontSize="12"
													Foreground="{DynamicResource MaterialDesignBody}"
													Icon="Info"
													Opacity="0.5" />
											</Button>

											<Button
												Height="32"
												Margin="2"
												BorderThickness="0"
												Click="OnSettingsClick"
												Style="{StaticResource TransparentButton}"
												ToolTip="Settings">
												<fa:IconBlock
													FontSize="12"
													Foreground="{DynamicResource MaterialDesignBody}"
													Icon="Cog"
													Opacity="0.5" />
											</Button>
										</StackPanel>
									</Grid>
								</Grid>

								<Border
									Grid.Column="1"
									Margin="-1,0,0,0"
									Background="{DynamicResource MaterialDesignPaper}"
									CornerRadius="3">

									<Grid>
										<Grid.RowDefinitions>
											<RowDefinition Height="Auto" />
											<RowDefinition />
										</Grid.RowDefinitions>

										<Rectangle
											Grid.Row="0"
											Height="24"
											Fill="Transparent"
											Visibility="{Binding SettingsService.Current.UseCustomBorder, Converter={StaticResource B2V}}" />

										<ContentPresenter
											Grid.Row="1"
											Margin="0,0,0,0"
											ContentSource="SelectedContent" />
									</Grid>
								</Border>
							</Grid>
						</ControlTemplate>
					</TabControl.Template>

					<TabItem>
						<TabItem.Header>
							<fa:IconImage
								Foreground="{DynamicResource MaterialDesignBodyLight}"
								Icon="HouseUser"
								ToolTip="Scene" />
						</TabItem.Header>

						<views:SceneView />
					</TabItem>

					<TabItem IsEnabled="{Binding TargetService.SelectedActor, Converter={StaticResource NotNullToBoolConverter}}">
						<TabItem.Header>
							<fa:IconImage
								Foreground="{DynamicResource MaterialDesignBodyLight}"
								Icon="UserEdit"
								IsEnabled="{Binding GameService.IsSignedIn}"
								ToolTip="Character" />
						</TabItem.Header>

						<characterPages:AppearancePage DataContext="{Binding TargetService.SelectedActor}" />
					</TabItem>
					<TabItem IsEnabled="{Binding TargetService.SelectedActor, Converter={StaticResource NotNullToBoolConverter}}">
						<TabItem.Header>
							<fa:IconImage
								Foreground="{DynamicResource MaterialDesignBodyLight}"
								Icon="Running"
								ToolTip="Pose" />
						</TabItem.Header>

						<posePages:PosePage DataContext="{Binding TargetService.SelectedActor}" />
					</TabItem>
				</TabControl>
			</Grid>

			<!--<Grid Margin="48, 22, 1, 1" Visibility="{Binding TargetService.SelectedActor, Converter={StaticResource NullToVisibilityConverter}}">
				<Rectangle Fill="{DynamicResource MaterialDesignPaper}" Opacity="0.9"/>
				<TextBlock Text="To get started, add an actor." Style="{StaticResource Label}" HorizontalAlignment="Center"/>
			</Grid>-->

			<!--  TitleBar  -->
			<Border
				Grid.ColumnSpan="2"
				Height="26"
				Margin="44,0,0,0"
				VerticalAlignment="Top"
				Background="Transparent"
				CornerRadius="2, 2, 0, 0"
				MouseDown="OnTitleBarMouseDown"
				Visibility="{Binding SettingsService.Current.UseCustomBorder, Converter={StaticResource B2V}}">

				<Grid VerticalAlignment="Top">

					<StackPanel HorizontalAlignment="Left" Orientation="Horizontal">

						<!--<views:MenuView />-->

						<TextBlock
							Margin="12,0,3,0"
							VerticalAlignment="Center"
							Opacity="0.5"
							Text="Anamnesis" />

						<!--<TextBlock
							Margin="2,0,3,0"
							VerticalAlignment="Center"
							Opacity="0.5"
							Text="{Binding UpdateService.Version}" />-->

						<TextBlock
							Margin="12,0,3,0"
							VerticalAlignment="Center"
							Opacity="0.5"
							Text="{Binding TargetService.SelectedActor.DisplayName}" />

						<ana:TextBlock
							Key="Error_NotInGame"
							Margin="12,0,3,0"
							VerticalAlignment="Center"
							Opacity="0.5"
							Visibility="{Binding GameService.IsSignedIn, Converter={StaticResource !B2V}}" />

						<fa:IconBlock
							Margin="6,0,0,0"
							FontWeight="Light"
							Foreground="{DynamicResource MaterialDesignBodyLight}"
							Icon="Sync"
							Visibility="{Binding TargetService.SelectedActor.IsRefreshing, Converter={StaticResource B2V}, FallbackValue=Collapsed}" />
						<fa:IconBlock
							Margin="6,0,0,0"
							FontWeight="Light"
							Foreground="{DynamicResource MaterialDesignBodyLight}"
							Icon="Hourglass"
							Visibility="{Binding TargetService.SelectedActor.PendingRefresh, Converter={StaticResource B2V}, FallbackValue=Collapsed}" />
					</StackPanel>

					<StackPanel HorizontalAlignment="Right" Orientation="Horizontal">

						<!--  Debugging toggles  -->
						<StackPanel
							HorizontalAlignment="Right"
							Orientation="Horizontal"
							Visibility="{Binding IsDebug, Converter={StaticResource B2V}}">

							<TextBlock
								VerticalAlignment="Center"
								Opacity="0.5"
								Text="{Binding MemoryService.LastTickCount}"
								ToolTip="Memory models ticked" />

							<ToggleButton
								Width="28"
								Margin="3,0,0,0"
								BorderThickness="0"
								IsChecked="{Binding LogService.VerboseLogging}"
								Style="{DynamicResource TransparentIconToggleButton}"
								ToolTip="Enable verbose logging">
								<ana:IconBlock FontSize="12" Icon="FileAlt" />
							</ToggleButton>
						</StackPanel>

						<ToggleButton
							Width="28"
							Margin="3,0,0,0"
							BorderThickness="0"
							IsChecked="{Binding SettingsService.Settings.AlwaysOnTop}"
							Style="{DynamicResource TransparentIconToggleButton}">

							<ToggleButton.ToolTip>
								<ana:TextBlock Key="Settings_AlwaysOnTop" />
							</ToggleButton.ToolTip>

							<ana:IconBlock FontSize="12" Icon="ThumbTack" />
						</ToggleButton>

						<Button
							Width="28"
							Margin="3,3,1,3"
							BorderThickness="0"
							Click="OnMinimiseClick"
							Style="{StaticResource TransparentButton}">
							<fa:IconBlock
								FontSize="12"
								Foreground="{DynamicResource MaterialDesignBody}"
								Icon="WindowMinimize"
								Opacity="0.5" />
						</Button>

						<Button
							Width="28"
							Margin="1,3,4,3"
							BorderThickness="0"
							Click="OnCloseClick"
							Style="{StaticResource TransparentButton}">
							<fa:IconBlock
								FontSize="12"
								Foreground="{DynamicResource MaterialDesignBody}"
								Icon="Times"
								Opacity="0.5" />
						</Button>

					</StackPanel>
				</Grid>
			</Border>

			<!--  Drawer flyouts  -->
			<materialdesign:DrawerHost
				x:Name="DrawerHost"
				Grid.Row="0"
				Grid.RowSpan="2"
				Grid.Column="0"
				Grid.ColumnSpan="2"
				Margin="1">
				<materialdesign:DrawerHost.RightDrawerContent>
					<Grid MinWidth="64" Background="{DynamicResource MaterialDesignCardBackground}">
						<ContentPresenter x:Name="DrawerRight" />
					</Grid>
				</materialdesign:DrawerHost.RightDrawerContent>
				<materialdesign:DrawerHost.LeftDrawerContent>
					<Grid MinWidth="64" Background="{DynamicResource MaterialDesignCardBackground}">
						<ContentPresenter x:Name="DrawerLeft" />
					</Grid>
				</materialdesign:DrawerHost.LeftDrawerContent>
				<materialdesign:DrawerHost.TopDrawerContent>
					<ContentPresenter
						x:Name="DrawerTop"
						MinHeight="128"
						Margin="12" />
				</materialdesign:DrawerHost.TopDrawerContent>
				<materialdesign:DrawerHost.BottomDrawerContent>
					<ContentPresenter
						x:Name="DrawerBottom"
						MinHeight="128"
						Margin="12" />
				</materialdesign:DrawerHost.BottomDrawerContent>
			</materialdesign:DrawerHost>

			<Border
				x:Name="Ftue"
				Width="350"
				Margin="10"
				Padding="6"
				VerticalAlignment="Top"
				Background="{StaticResource MaterialDesignPaper}"
				BorderBrush="{StaticResource PrimaryHueMidBrush}"
				BorderThickness="1"
				CornerRadius="3"
				Visibility="Collapsed">

				<Grid>

					<Grid.RowDefinitions>
						<RowDefinition />
						<RowDefinition Height="Auto" />
					</Grid.RowDefinitions>

					<ana:TextBlock
						Key="FTUE_Message"
						Grid.Row="0"
						Margin="32,0,0,10"
						AllLanguages="True"
						TextWrapping="Wrap" />
					<Button
						Grid.Row="1"
						Width="75"
						HorizontalAlignment="Right"
						Click="OnFtueOkClicked"
						Content="OK"
						Style="{StaticResource TransparentButton}" />

					<Image
						Grid.RowSpan="2"
						Width="64"
						Margin="-32,-28,0,0"
						HorizontalAlignment="Left"
						VerticalAlignment="Top"
						Source=".\Assets\Hydaelyn.png" />

				</Grid>
			</Border>

			<!--<Border Background="Transparent"
							Grid.ColumnSpan="2"
							VerticalAlignment="Top"
							MouseDown="OnTitleBarMouseDown"
							Height="26"
							Margin="0, 0, 256, 0">
			</Border>-->

		</Grid>

		<Border
			x:Name="ActiveBorder"
			BorderBrush="{DynamicResource PrimaryHueMidBrush}"
			BorderThickness="1"
			CornerRadius="3">
			<Border.Effect>
				<DropShadowEffect
					BlurRadius="10"
					Opacity="0.5"
					ShadowDepth="0" />
			</Border.Effect>
		</Border>

		<Thumb
			Width="16"
			Height="16"
			Margin="0,0,-4,-4"
			HorizontalAlignment="Right"
			VerticalAlignment="Bottom"
			Cursor="SizeNWSE"
			DragDelta="OnResizeDrag" />

	</Grid>
</Window>
