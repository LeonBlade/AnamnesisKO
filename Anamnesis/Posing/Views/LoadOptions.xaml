<UserControl
	x:Class="Anamnesis.Posing.Views.LoadOptions"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:ana="clr-namespace:Anamnesis.Styles.Controls"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="clr-namespace:Anamnesis.Posing.Views"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:XivToolsWpf="clr-namespace:XivToolsWpf.Controls;assembly=XivToolsWpf"
	d:DesignHeight="450"
	d:DesignWidth="800"
	mc:Ignorable="d">

	<StackPanel>
		<CheckBox IsChecked="{Binding LoadRotations}">
			<CheckBox.Content>
				<XivToolsWpf:TextBlock Key="Pose_LoadRotation" />
			</CheckBox.Content>
		</CheckBox>

		<CheckBox IsChecked="{Binding LoadPositions}">
			<CheckBox.Content>
				<XivToolsWpf:TextBlock Key="Pose_LoadPosition" />
			</CheckBox.Content>
		</CheckBox>

		<CheckBox IsChecked="{Binding LoadScales}">
			<CheckBox.Content>
				<XivToolsWpf:TextBlock Key="Pose_LoadScale" />
			</CheckBox.Content>
		</CheckBox>
	</StackPanel>
</UserControl>
